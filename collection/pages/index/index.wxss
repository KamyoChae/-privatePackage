 
.wrapper{
  position: relative;
  width: 100vw;
  min-height: 100vh;
}
.wrapper::before{
  position: absolute;
  content: "";
  width: 100vw;
  height: 20vh;
  background: #d81e06; 
}
.con-clear{
  position: absolute;
  left: 0;
  right: 0;
  box-sizing: border-box;
}
.container{

  width: 96vw; 
  padding: 1em;
  box-sizing: border-box;
  border-radius: 10rpx;
  background: #fff;
  margin: 20rpx auto;
}

.userinfo{
  position: relative;
  width: 100%;
  height: 200rpx; 
  border-bottom: 1rpx solid #eee;
}
.userinfo::after{
  position: absolute;
  content: "";
  top: 0;
  right: 1em;
  bottom: 0;
  margin: auto;
  width: 20rpx;
  height: 20rpx;
  border-top:1px solid #8a8a8a;
  border-right:1px solid #8a8a8a;
  transform: rotateZ(45deg);
}
.userinfo-avatar{
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
  vertical-align: middle;
}
.userinfo-nickname{
  margin: 1em;
}
.menu{ 
  display: flex;
  flex-wrap: wrap;
  width: 100%;
  margin-top: 40rpx; 
}
.menu-item image{
  width: 64rpx;
  height:64rp;
}
.menu-item {
  display: flex;
  flex-direction: column;
  align-items: center; 
  width: 180rpx; 
  font-size: 10pt;
  margin: 10rpx;
}
.item-text{
  margin: .5em 0 1em 0;
}